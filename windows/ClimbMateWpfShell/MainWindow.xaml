<Window x:Class="ClimbMateWpfShell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClimbMate Windows GUI" Height="760" Width="1180">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock VerticalAlignment="Center" Text="Repo Path:" Margin="0,0,8,0"/>
            <TextBox x:Name="RepoPathTextBox" Width="560" Margin="0,0,8,0"/>
            <Button Content="Detect" Width="90" Margin="0,0,12,0" Click="OnDetectRepoClick"/>

            <TextBlock VerticalAlignment="Center" Text="Data File:" Margin="0,0,8,0"/>
            <TextBox x:Name="DataFileTextBox" Width="300" Margin="0,0,8,0"/>
            <Button Content="Load" Width="80" Click="OnLoadClick"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="370"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="视频管理" Grid.Column="0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Video ID"/>
                    <TextBox x:Name="VideoIdTextBox" Grid.Row="1" Margin="0,4,0,8"/>

                    <TextBlock Grid.Row="2" Text="视频文件路径 (.mp4/.mov)"/>
                    <TextBox x:Name="VideoPathTextBox" Grid.Row="3" Margin="0,4,0,8"/>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,8">
                        <StackPanel Width="120">
                            <TextBlock Text="Route"/>
                            <ComboBox x:Name="RouteComboBox" SelectedIndex="0" Margin="0,4,0,0">
                                <ComboBoxItem Content="sport"/>
                                <ComboBoxItem Content="bouldering"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Width="100" Margin="10,0,0,0">
                            <TextBlock Text="Grade"/>
                            <TextBox x:Name="GradeTextBox" Margin="0,4,0,0"/>
                        </StackPanel>
                        <StackPanel Width="100" Margin="10,0,0,0">
                            <TextBlock Text="Format"/>
                            <ComboBox x:Name="FormatComboBox" SelectedIndex="0" Margin="0,4,0,0">
                                <ComboBoxItem Content="mp4"/>
                                <ComboBoxItem Content="mov"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <Button Grid.Row="5" Content="新增视频" Height="32" Click="OnAddVideoClick"/>
                    <Button Grid.Row="6" Content="刷新列表" Height="32" Margin="0,8,0,8" Click="OnRefreshVideosClick"/>

                    <ListBox x:Name="VideoListBox" Grid.Row="7" SelectionChanged="OnVideoSelectionChanged"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="播放与打点" Grid.Column="2">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="260"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="SelectedVideoTextBlock" Text="未选择视频" FontWeight="Bold" Margin="0,0,0,8"/>

                    <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1">
                        <MediaElement x:Name="Player"
                                      LoadedBehavior="Manual"
                                      UnloadedBehavior="Stop"
                                      MediaOpened="OnMediaOpened"
                                      Stretch="Uniform"/>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,8">
                        <Button Content="Play" Width="80" Click="OnPlayClick"/>
                        <Button Content="Pause" Width="80" Margin="8,0,0,0" Click="OnPauseClick"/>
                        <Button Content="Stop" Width="80" Margin="8,0,0,0" Click="OnStopClick"/>
                        <TextBlock Text="Current:" Margin="20,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="CurrentTimeTextBlock" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8">
                        <Slider x:Name="TimelineSlider" Width="620" Minimum="0" Maximum="1" ValueChanged="OnTimelineValueChanged"/>
                        <TextBlock Text="拖拽时间轴" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBox x:Name="MarkerTextTextBox" Width="300" Margin="0,0,8,0"/>
                        <Button Content="当前时间打点" Width="120" Click="OnAddMarkerAtCurrentClick"/>
                        <Button Content="跳转到选中打点" Width="130" Margin="8,0,0,0" Click="OnJumpToMarkerClick"/>
                    </StackPanel>

                    <ListBox x:Name="MarkerListBox" Grid.Row="5"/>
                </Grid>
            </GroupBox>
        </Grid>

        <TextBox Grid.Row="2"
                 x:Name="OutputTextBox"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 FontFamily="Consolas"/>
    </Grid>
</Window>
