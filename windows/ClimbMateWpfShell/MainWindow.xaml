<Window x:Class="ClimbMateWpfShell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClimbMate Windows GUI Shell" Height="680" Width="980">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Text="Repo Path:" Margin="0,0,8,0"/>
            <TextBox x:Name="RepoPathTextBox" Width="700" Margin="0,0,8,0"/>
            <Button Content="Detect" Width="90" Click="OnDetectRepoClick"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Text="Data File:" Margin="0,0,8,0"/>
            <TextBox x:Name="DataFileTextBox" Width="500" Margin="0,0,8,0"/>
            <Button Content="Init Sample" Width="110" Click="OnInitSampleClick"/>
            <Button Content="List Videos" Width="100" Margin="8,0,0,0" Click="OnListClick"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Text="Route:" Margin="0,0,8,0"/>
            <ComboBox x:Name="RouteComboBox" Width="130" SelectedIndex="0">
                <ComboBoxItem Content="(none)"/>
                <ComboBoxItem Content="sport"/>
                <ComboBoxItem Content="bouldering"/>
            </ComboBox>
            <TextBlock VerticalAlignment="Center" Text="Grade:" Margin="12,0,8,0"/>
            <TextBox x:Name="GradeTextBox" Width="100"/>
            <Button Content="Filter Route+Grade" Width="160" Margin="12,0,0,0" Click="OnFilterRouteGradeClick"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center" Text="From (YYYY-MM-DD):" Margin="0,0,8,0"/>
            <TextBox x:Name="FromDateTextBox" Width="130" Margin="0,0,12,0"/>
            <TextBlock VerticalAlignment="Center" Text="To (YYYY-MM-DD):" Margin="0,0,8,0"/>
            <TextBox x:Name="ToDateTextBox" Width="130"/>
            <Button Content="Filter Date" Width="100" Margin="12,0,0,0" Click="OnFilterDateClick"/>
            <Button Content="Clear Output" Width="110" Margin="12,0,0,0" Click="OnClearOutputClick"/>
        </StackPanel>

        <TextBox Grid.Row="4"
                 x:Name="OutputTextBox"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 FontFamily="Consolas"/>
    </Grid>
</Window>
